<form method="post" action="{{ path('experience_delete', {'id': experience.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette experience?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ experience.id) }}">
    <button class="btn">Supprimer</button>
</form>
